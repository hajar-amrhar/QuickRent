<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/background_flou"

    >


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/map"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="110dp"
                android:src="@drawable/placeholder_noir" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="@string/app_name"
                android:textSize="20dp"
                android:textStyle="bold"


                />

            <ImageView
                android:id="@+id/parametre"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/settings" />

        </LinearLayout>



        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/chercher_annonce"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="recherche"
            app:boxBackgroundColor="@color/colprim"
            app:hintTextColor="@color/white"

            >
            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/forme_recherche"
                android:textColor="@color/black"

                android:layout_marginVertical="8dp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/butt"
        android:id="@+id/fragment1"
        />


        />
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/butt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/butt_navigation"
            app:itemIconTint="@color/col_col"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bott_nav"
            android:background="@drawable/cases"

            />



    </com.google.android.material.appbar.AppBarLayout>


</RelativeLayout>

