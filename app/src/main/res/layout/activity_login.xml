<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical"
    android:background="@drawable/backg_principale"
    android:fitsSystemWindows="true"

    >


    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"

        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="adresse Email"
            app:boxBackgroundColor="@color/colprim"
            app:hintTextColor="@color/white"
            android:layout_marginVertical="20dp"

            >

            <com.google.android.material.textfield.TextInputEditText

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cases"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="mot de passe"
            app:hintTextColor="@color/white"
            app:boxBackgroundColor="@color/colprim"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cases"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/connect"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Se connecter"
            android:layout_marginTop="30dp"
            android:background="@drawable/forme_button"

            />
        <TextView
            android:id="@+id/forgotPswrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bleu"
            android:text="mot de passe oublié !"
            android:backgroundTint="@color/invisible"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/create"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/ciel"
            android:layout_gravity="center"
            android:text="créer un compte"
            android:background="@drawable/forme_button"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            >

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/facebook" />


            /><ImageView
            android:id="@+id/google"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/google" />


            />

            <ImageView
                android:id="@+id/email"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/gmail" />


            />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>