<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DetailsRmouveFragment"
    android:background="@drawable/background_flou">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"


        android:backgroundTint="@color/colprim"
        app:contentScrim="?attr/colorOnPrimary">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collabsing_toolbar2"
            android:background="@color/colprim"
            >
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:transitionName="annTN1"
                        android:id="@+id/imann11R"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/bedroom2"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:transitionName="annTN2"

                        android:id="@+id/imann22R"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/bedroom1"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:transitionName="annTN3"

                        android:id="@+id/imann33R"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/locomm"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:transitionName="annTN4"

                        android:id="@+id/imann44R"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/locomm"
                        android:scaleType="centerCrop"/>

                </LinearLayout>
            </HorizontalScrollView>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                >

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateAnnonceR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jj/mm/aa"
                    android:textColor="@color/purple_200"
                    android:textSize="20dp"
                    android:transitionName="dateTN" />



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Titre"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/titreR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre de l'annonce "
                android:textSize="18dp"
                android:transitionName="titreTN" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Adresse"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/adresseR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="adresse de l'annonce "
                android:textSize="18dp"
                android:transitionName="adresseTN" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/descriptionR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description de l'annonce "
                android:textSize="18dp"
                android:transitionName="descriptionTN" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prix"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/prixR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="10dp"
                    android:text="prix "
                    android:textSize="18dp"
                    android:transitionName="prixTN" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dh"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Superficie"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/superficieR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Superficie"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m²"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ameublement "

                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/ameublementR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="ameublement "
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catégorie"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView

                    android:id="@+id/CatégorieR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="catégorie "
                    android:textSize="18dp" />

            </LinearLayout>




            <Button
                android:id="@+id/contacterR"
                android:layout_width="300dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/vert"
                android:text="supprimer l'annonce  " />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>